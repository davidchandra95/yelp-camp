<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= campground.name %>" name="campground[name]" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= campground.image %>" name="campground[image]" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= campground.description %>" name="campground[description]" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Back to Campgrounds</a>
        </div>
    </div>

    <% include ../partials/footer %>